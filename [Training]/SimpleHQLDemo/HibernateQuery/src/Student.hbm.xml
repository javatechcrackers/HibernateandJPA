<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.igate.entity.Student" table="STUDENT">
        <meta attribute="class-description">This class contains student details.</meta>
        <id name="id" type="long" column="STUDENT_ID">
            <generator class="native" />
        </id>
        <property name="sname" type="string" not-null="true" length="100" column="STUDENT_NAME" /> 
         <property name="sroll" type="int" not-null="true" length="10" column="STUDENT_ROLL" />        
          <property name="scourse" type="string" not-null="true" length="100" column="STUDENT_COURSE" />               
        
    </class>
</hibernate-mapping>
